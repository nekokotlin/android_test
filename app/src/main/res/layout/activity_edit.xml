<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EditActivity" tools:layout_editor_absoluteY="25dp">

    <EditText
            android:layout_width="212dp"
            android:layout_height="97dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTweet"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime" android:layout_marginBottom="57dp"
            app:layout_constraintEnd_toEndOf="@+id/buttonSubmit" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/buttonSubmit"/>
    <TextView
            android:text="投稿する"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp" android:layout_marginLeft="150dp" android:layout_marginStart="150dp"/>
    <Button
            android:text="送信"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSubmit"
            android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime" android:layout_marginBottom="195dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp"/>
    <TextView
            android:text="名前︰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewName" android:layout_marginStart="72dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewName"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/editTextTweet"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTime"
            app:layout_constraintStart_toStartOf="@+id/textViewName" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/textViewName"/>
    <Button
            android:text="戻る"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBack"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="128dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="128dp"
            android:layout_marginBottom="41dp"/>
</android.support.constraint.ConstraintLayout>